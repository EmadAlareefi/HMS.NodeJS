<div id="updateRoomModal" class="modal fade" role="dialog" aria-labelledby="Update a room" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fontDroidBold pdr20" id="AddRoomTitle">تعديل بيانات الغرفة </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmUpdateRoom" action="/ManageFreeBookings/updateRoom" method="POST">
                    <div class="field-row" style="grid-template-columns:50% 50%;">
                        <div class="field-cell">
                            <fieldset id="FsAddRoomBasicInfo" class="pdlr30">
                                <label class="title">
                                    <h4>المعلومات الأساسية</h4>
                                </label>

                                <div class="wid100 pd20">
                                    <table class="wid100">
                                        <tr>
                                            <td>
                                                <label for="name">الاسم</label>
                                            </td>
                                            <td>
                                                <input class="form-control wid100 fltl" name="roomNumber" form="frmUpdateRoom" type="text">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="floor">الطابق</label>
                                            </td>
                                            <td>
                                                <input class="form-control wid100 fltl" name="floor" form="frmUpdateRoom" type="text">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="naroomsNumberme">عدد الغرف</label>
                                            </td>
                                            <td>
                                                <input class="form-control wid100 fltl" name="roomsNumber" form="frmUpdateRoom" type="text">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="bathrooms">عدد دورات المياة</label>
                                            </td>
                                            <td>
                                                <input class="form-control wid100 fltl" name="bathrooms" form="frmUpdateRoom" type="text">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="singleBeds">عدد الأسرة المفردة</label>
                                            </td>
                                            <td>
                                                <input class="form-control wid100 fltl" name="singleBeds" form="frmUpdateRoom" type="text">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="doubleBeds">عدد الأسرة المزدوجة</label>
                                            </td>
                                            <td>
                                                <input class="form-control wid100 fltl" name="doubleBeds" form="frmUpdateRoom" type="text">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="closets">عدد الخزائن</label>
                                            </td>
                                            <td>
                                                <input class="form-control wid100 fltl" name="closets" form="frmUpdateRoom" type="text">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="tvs">عدد التلفزونات</label>
                                            </td>
                                            <td>
                                                <input class="form-control wid100 fltl" name="tvs" form="frmUpdateRoom" type="text">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="acType">نوع المكيف</label>
                                            </td>
                                            <td>
                                                <select class="form-control wid100 fltl combobox" name="acType" id="acType" form="frmUpdateRoom">
                                                        <% settings[0].acTypes.forEach(type => { %>
                                                            <option value=<%=type %> >
                                                                <%= type  %>
                                                            </option>
                                                            <% }) %>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="roomType">نوع الغرفة</label>
                                            </td>
                                            <td>
                                                <select class="form-control wid100 fltl combobox" name="roomType" id="roomType" form="frmUpdateRoom">
                                                    <% settings[0].roomTypes.forEach(type => { %>
                                                        <option value=<%=type %> >
                                                            <%= type  %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label for="status">الحالة</label>
                                            </td>
                                            <td>
                                                <select class="form-control wid100 fltl combobox" name="status" id="status" form="frmUpdateRoom">
                                                        <% settings[0].statuses.forEach(type => { %>
                                                            <option value=<%=type %> >
                                                                <%= type  %>
                                                            </option>
                                                            <% }) %>
                                                </select>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </fieldset>
                        </div>
                        <div class="field-cell">
                            <fieldset class="FsAddRoomLeft">
                                <label class="title">
                                    <h4>المميزات العامة</h4>
                                </label>

                                <div class="wid100 pd20">
                                    <table class="wid100">
                                        <tr>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="internet" id="internet">
                                                <label class="pdr30 form-check-label" for="internet">
                                                    انترنت </label>
                                            </td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="parking" id="parking">
                                                <label class="pdr30 form-check-label" for="parking">
                                                    مواقف السيارات </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="elevator" id="elevator">
                                                <label class="pdr30 form-check-label" for="elevator">
                                                    مصعد </label>
                                            </td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="cleaning" id="cleaning">
                                                <label class="pdr30 form-check-label" for="cleaning">
                                                    تنظيف الغرف </label>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </fieldset>
                            <fieldset class="FsAddRoomLeft">
                                <label class="title">
                                    <h4>المميزات الخاصة</h4>
                                </label>

                                <div class="wid100 pd20">
                                    <table style="width: 63.5%;">
                                        <tr>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="phoneguide" id="phoneguide">
                                                <label class="pdr30 form-check-label" for="phoneguide">
                                                    دليل الهاتف </label>
                                            </td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="oven" id="oven">
                                                <label class="pdr30 form-check-label" for="oven">
                                                    فرن </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="paper" id="paper">
                                                <label class="pdr30 form-check-label" for="paper">
                                                    الصحيفة </label>
                                            </td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="microwave" id="microwave">
                                                <label class="pdr30 form-check-label" for="microwave">
                                                    مايكرويف </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="qiblah" id="qiblah">
                                                <label class="pdr30 form-check-label" for="qiblah">
                                                    تحديد القبلة </label>
                                            </td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="washer" id="washer">
                                                <label class="pdr30 form-check-label" for="washer">
                                                    غسالة </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="restaurantslist" id="restaurantslist">
                                                <label class="pdr30 form-check-label" for="restaurantslist">
                                                    قائمة المطاعم </label>
                                            </td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="iron" id="iron">
                                                <label class="pdr30 form-check-label" for="iron">
                                                    مكوى </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="refrigerator" id="refrigerator">
                                                <label class="pdr30 form-check-label" for="refrigerator">
                                                    ثلاجة </label>
                                            </td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="foodtable" id="foodtable">
                                                <label class="pdr30 form-check-label" for="foodtable">
                                                    طاولة طعام </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="hall" id="hall">
                                                <label class="pdr30 form-check-label" for="hall">
                                                    صالة </label>
                                            </td>
                                            <td>
                                                <input class="form-check-input" type="checkbox" form="frmUpdateRoom" name="kitchen" id="kitchen">
                                                <label class="pdr30 form-check-label" for="kitchen">
                                                    مطبخ </label>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </fieldset>
                            <fieldset>
                                <label class="title">
                                    <h4>ملاحظات</h4>
                                </label>
                                <div class="wid100 pdt20">
                                    <textarea class="form-control frmControlsFs" form="frmUpdateRoom" name="notes" id="notes" rows="2"></textarea>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnAddRoom" type="submet" form="frmUpdateRoom" class="btn btn-primary">حفظ</button>
                <button id="btnAddRoomClose" type="button" class="btn btn-secondary formClose" data-dismiss="modal"> الغاء الأمر</button>
            </div>
        </div>
    </div>
</div>