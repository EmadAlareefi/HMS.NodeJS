                <script>
                        window.onload = function () {
                                var chart = new CanvasJS.Chart("chartContainer", {
                                        theme: "light2", // "light1", "light2", "dark1", "dark2"
                                        exportEnabled: true,
                                        animationEnabled: true,
                                        title: {
                                                text: "إحصائيات الغرف",
                                                fontFamily: "Droid_Regular",
                                        },
                                        legend: {
                                                horizontalAlign: "left",
                                                verticalAlign: "center",
                                                fontFamily: "Droid_Regular",
                                        },
                                        data: [{
                                                type: "pie",
                                                startAngle: 25,
                                                toolTipContent: "<b>{label}</b>: {y}",
                                                showInLegend: "true",
                                                legendText: "{label}",
                                                indexLabelFontSize: 16,
                                                indexLabel: "{label} - {y}",
                                                indexLabelFontFamily: "Droid_Regular",
                                                dataPoints: [{
                                                                y: 20,
                                                                label: "عدد الغرف الفارغة"
                                                        },
                                                        {
                                                                y: 2,
                                                                label: "عدد الغرف المؤجرة"
                                                        },
                                                        {
                                                                y: 1,
                                                                label: "عدد الغرف تحت التنظيف"
                                                        }
                                                ]
                                        }],
                                        backgroundColor: "transparent"
                                });
                                chart.render();


                                Highcharts.chart('container', {
                                        chart: {
                                                plotBackgroundColor: null,
                                                plotBorderWidth: null,
                                                plotShadow: false,
                                                type: 'pie'
                                        },
                                        title: {
                                                text: 'إحصائات الغرف'
                                        },
                                        tooltip: {
                                                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                                        },
                                        plotOptions: {
                                                pie: {
                                                        allowPointSelect: true,
                                                        cursor: 'pointer',
                                                        dataLabels: {
                                                                enabled: true,
                                                                format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                                                                style: {
                                                                        color: (Highcharts.theme &&
                                                                                Highcharts
                                                                                .theme.contrastTextColor
                                                                        ) || 'black'
                                                                }
                                                        }
                                                }
                                        },
                                        series: [{
                                                name: 'Brands',
                                                colorByPoint: true,
                                                data: [{
                                                        name: 'عدد الغرف الفارغة',
                                                        y: 20,
                                                        sliced: true,
                                                        selected: true
                                                }, {
                                                        name: 'عدد الغرف المؤجرة',
                                                        y: 2
                                                }, {
                                                        name: 'عدد الغرف تحت التنظيف',
                                                        y: 1
                                                }]
                                        }]
                                });
                                $('.canvasjs-chart-credit').remove();
                                $('.highcharts-credits').remove();


                                // $("div:contains()").remove();
                        }
                </script>
